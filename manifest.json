{
    "manifest_version": 3,
    "name": "Youtube skip",
    "description": "Extens√£o pro Youtube",
    "version": "1.0",
    "permissions": [
        "scripting",
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": "img/picolas.png"
    },
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
      "content_scripts": [
        {
          "matches": ["https://*.youtube.com/*"],
          "js": ["js/script.js"]
        }
      ]

}